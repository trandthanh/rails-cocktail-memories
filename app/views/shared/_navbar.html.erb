<div class="navbar-cm">
  <div class="navbar-cm-left width">
    <%= link_to root_path do %>
      <%= image_tag "logo.png", class: "navbar-cm-logo" %>
    <% end %>
  </div>
  <div class="navbar-cm-middle">
    <%= link_to root_path do %>
      <h3 class="margin-strip">Cocktail Memories</h3>
    <% end %>
  </div>
  <div class="navbar-cm-right width">
    <%= form_tag search_path, method: :get, class: "flex" do %>
      <%= text_field_tag :query, params[:query], class: "form-control navbar-cm-search", placeholder: "Cocktail?" %>
      <%= button_tag class: "button-strip margin-strip padding-strip" do %>
        <i class="fas fa-search"></i>
      <% end %>
    <% end %>
  </div>
</div>

<div class="navbar-cm-2 text-center">
  <div class="navbar-cm-2-middle">
    <p class="margin-strip">ALL COCKTAILS</p>
    <p class="margin-strip">THE STORY</p>
  </div>
</div>

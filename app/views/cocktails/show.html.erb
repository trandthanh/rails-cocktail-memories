<h1><%= @cocktail.name %></h1>

<% @cocktail.doses.each do |dose| %>
  <%= dose.description %>
  <%= dose.ingredient.name %>
  <%= link_to "Delete this dose", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" }  %>
<% end %>

<%= link_to "Add a new dose", new_cocktail_dose_path(@cocktail), class: "btn btn-default"  %>


<%= cl_image_tag(@cocktail.photo,
      width: 400, height: 300, crop: :fill) %>


<h1>Reviews</h1>

<% @cocktail.reviews.each do |review| %>
  <%= review.content %>
  <%= review.rating %>
<% end %>

<h1>Add a review</h1>

<%= simple_form_for [@cocktail, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit %>
<% end %>
